<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applicant.ApplicantVerification">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:orientation="horizontal"

        android:elevation="10dp"
        android:padding="5dp"
        android:layout_margin="8dp"

        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_arrow_back_24"

            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="Verify Account"
          android:layout_marginLeft="10dp"
           android:textColor="@color/black"
           android:textSize="24sp"
           android:textStyle="bold"
           >




       </TextView>


    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:text="You have not been verified, please verify first to use the app"

            >





        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="5dp"

            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/layout_corner"

            android:outlineSpotShadowColor="#01b8c8"
            android:padding="20dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:id="@+id/verifyICIV"
                android:background="@drawable/ic_verification" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Identity Card/NRIC"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:id="@+id/companyProfileLLL"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/layout_corner"
            android:layout_marginBottom="10dp"
            android:outlineSpotShadowColor="#01b8c8"
            android:padding="20dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_selfie"
                android:id="@+id/selfieICIV"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Selfie With IC"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/applicantVrfBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="submit"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll">


    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>