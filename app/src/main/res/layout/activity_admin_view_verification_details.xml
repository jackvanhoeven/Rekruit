<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminViewVerificationDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_corner"
            android:elevation="5dp"
            android:orientation="vertical"
            android:outlineSpotShadowColor="#01b8c8"

            android:padding="15dp">

            <TextView
                android:id="@+id/usernameAVVDTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="username"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userEmailAVVDTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="useremail@gmail.com"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phoneNumAVVDTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone number"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_corner"
            android:elevation="5dp"
            android:outlineSpotShadowColor="#01b8c8">

           <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/icIV"/>


           <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/selfieICIV"/>






        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Approve"
            android:id="@+id/approveUserBtn"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rejectUserBtn"
            android:text="Reject"
            android:layout_marginTop="20dp"/>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>